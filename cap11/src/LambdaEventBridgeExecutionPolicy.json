{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "CloudWatchLogGroupCreation",
			"Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": "arn:aws:logs:REGIAO:ID_CONTA:*"
        },
        {
            "Sid": "CloudWatchLogActions",
			"Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": [
                "arn:aws:logs:REGIAO:ID_CONTA:log-group:/aws/lambda/registro-webhook:*"
            ]
        },
		{
            "Sid": "EventBridgeActions",
			"Effect": "Allow",
            "Action": [
                "events:CreateConnection",
                "events:CreateApiDestination",
				"events:PutRule",
				"events:PutTargets"				
            ],
            "Resource": "arn:aws:events:REGIAO:ID_CONTA:*"
        },
		{
            "Sid": "IAMActions",
			"Effect": "Allow",
            "Action": [
                "iam:CreatePolicy",
                "iam:CreateRole",
				"iam:GetRole",
				"iam:AttachRolePolicy"				
            ],
            "Resource": "arn:aws:iam::ID_CONTA:*"
        },
		{
            "Sid": "IAMPassRoleActions",
			"Effect": "Allow",
            "Action": [                
				"iam:PassRole"				
            ],
            "Resource": "arn:aws:iam::ID_CONTA:role/Merchant-*-invocationRole"
        },
		{
		  "Sid": "SecretManagerActions",
		  "Effect": "Allow",
		  "Action": [
			"secretsmanager:CreateSecret",
			"secretsmanager:ListSecrets"
		  ],
		  "Resource": "*"
		}
    ]
}